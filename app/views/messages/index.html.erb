<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
      <% @message.each do |message| %>
        <span class="label label-info">
            名前:<%= message.name %>
        </span>
        <div class ="text">内容:<%= message.body %></div>
    <% end %>
    </div>
</div>

<%= form_for(Message.new, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
     <label for="message_name" class="col-sm-1 control-label">名前</label>
       <div class="col-sm-11">
          <%= f.text_field :name, class:'form-control', placeholder:'名前' %>
       </div>
            <div class="col-sm-12"></div>
  </div>
  <div class="form-group">
      <label for="message_name" class="col-sm-1 control-label">内容</label>
       <div class="col-sm-11">
          <%= f.text_area :body , :maxlength => "20", class:'form-control', placeholder:'内容'%>
       </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-1 col-sm-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
  </div>
<% end %>