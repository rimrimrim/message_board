<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
        <% Message.new.each do |message| %>
    <span class="label label-info">
        名前:<%= message.name %>
    </span>
        内容:<%= message.body %>
    <% end %>
 </div>
</div>

<%= form_for(Message.new) do |f| %>
  <% if Message.new.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% Message.new.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
 <% end %>
  
    名前：
    <%= f.text_field :name %>
    内容：
    <%= f.text_field :body %>
    <%= f.submit %>
<% end %>